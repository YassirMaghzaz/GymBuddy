<div class="container">
  <div class="row justify-content-center">
    <div class="card custom-card">
      <div class="custom-card-header">
        <h2 class="text-center">Preferences</h2>
      </div>
      <div class="custom-card-body">
        <%= simple_form_for @preference do |f| %>
          <div class="form-inputs custom-form-inputs">
            <%= f.input :workout_days, label: 'Workout Days', required: true, input_html: { class: "custom-form-control form-control" } %>
            <%= f.input :gym, label: 'Gym', required: true, input_html: { class: "custom-form-control form-control" } %>
            <%= f.input :workout_type, label: 'Workout Type', as: :select, collection: ['Cardio', 'Strength', 'Mixed'], required: true, input_html: { class: "custom-form-control form-control" } %>
          </div>
          <div class="custom-card-action">
            <% unless params[:step] == '1' %>
              <%= f.button :button, 'Go Back', type: 'button', onclick: 'history.back()', class: "btn custom-btn-secondary" %>
            <% end %>
            <%= f.button :submit, params[:step] == '2' ? 'Send' : 'Next', class: "btn custom-btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

